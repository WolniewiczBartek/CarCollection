{% extends 'base.html.twig' %}


{% block body %}
    
    <div class="container-fluid d-flex flex-column align-items-center text-dark">
    {% if app.user %}
        <a class="btn btn-outline-dark w-50 mt-4" href="/cars/create">Add a car</a>
        {% if app.user.cars|length > 0 %}
            {% for car in app.user.cars %}
                    <div class="card rounded-start my-4 w-50">
                    <div class="row g-0">
                        <div class="col-md-5">
                        <img src="{{car.ImagePath}}" class="img-fluid rounded-start" alt="{{car.brand}} {{car.model}}">
                        </div>
                        <div class="col-md-7">
                        <div class="card-body mt-4 mx-5">
                            <h2 class="card-title">{{car.brand}} {{car.model}}</h2>
                            <div class="card-text">
                            <ul class="list-unstyled">
                                <li>Production Year: {{car.ProductionYear}}</li>
                                <li>Horse Power: {{car.HorsePower}}</li>
                            </ul>
                            <a class="btn btn-outline-dark" href="/cars/{{car.id}}">More Info</a>
                            </div>
                        </div>
                        </div>
                    </div>
                    </div>
            {% endfor %}
            {% else %}
                <h1 class="mt-5">Your car collection is empty!</h1>
            {% endif %}
    {% else %}
        <h1 class="mt-4">Our users' cars</h1>
        {% for car in cars %}
            <div class="card rounded-start my-4 w-50">
            <div class="row g-0">
                <div class="col-md-5">
                <img src="{{car.ImagePath}}" class="img-fluid rounded-start" alt="{{car.brand}} {{car.model}}">
                </div>
                <div class="col-md-7">
                <div class="card-body mt-4 mx-5">
                    <h2 class="card-title">{{car.brand}} {{car.model}}</h2>
                    <div class="card-text">
                    <ul class="list-unstyled">
                        <li>Production Year: {{car.ProductionYear}}</li>
                        <li>Horse Power: {{car.HorsePower}}</li>
                    </ul>
                    <a class="btn btn-outline-dark" href="/cars/{{car.id}}">More Info</a>
                    </div>
                </div>
                </div>
            </div>
            </div>
        {% endfor %}
    {% endif %}
    </div>
{% endblock %}
