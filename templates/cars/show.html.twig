{% extends 'base.html.twig' %}


{% block body %}
    <div class="container-fluid d-flex flex-column align-items-center mt-5">
        <div class="card rounded-start my-5 w-75" >
        <div class="row g-0">
            <div class="col-lg-6 col-md-12 col-sm-12">
            <img src="{{car.ImagePath}}" class="img-fluid rounded-start" alt="{{car.Brand}} {{car.Model}}">
            </div>
            <div class="col-lg-6 col-md-12 col-sm-12">
            <div class="card-body mt-5 mx-5">
                <h2 class="card-title">{{car.Brand}} {{car.Model}}</h2>
                <div class="card-text">
                <ul class="list-unstyled mt-4">
                    <li>Production Year: {{car.ProductionYear}}</li>
                    <li class="mt-3">Horse Power: {{car.HorsePower}}</li>
                </ul>
                <div class="mt-3">{{car.Description}}</div>
                </div>
            </div>
            </div>
        </div>
        </div>
        {% if app.user %}
        <div class="w-50 d-flex flex-row justify-content-center">
            <a class="btn btn-outline-success w-25 mx-2" href="/cars/update/{{car.id}}">Update</a>
            <a class="btn btn-outline-danger w-25 mx-2" href="/cars/delete/{{car.id}}">Delete</a>
        </div>
        {% endif %}
    </div>
        
{% endblock %}
